<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Container for Button and Heading -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <!-- Heading TextView -->
            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encrypt Your Thoughts"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_alignParentStart="true"



                android:layout_centerVertical="true" />

            <!-- Save Button -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="16sp"
                android:textColor="#FFEFE6"
                android:background="@drawable/rounded_button"
                android:layout_alignParentEnd="true"

                android:layout_centerVertical="true"
                android:elevation="6dp"
                android:layout_marginEnd="8dp" />
        </RelativeLayout>

        <!-- Polaroid Frame Container -->
        <LinearLayout
            android:id="@+id/polaroidContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/polaroid_background"
            android:padding="16dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:minHeight="700dp"
            android:minWidth="400dp">

            <!-- Image section -->
            <ImageView
                android:id="@+id/captured_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:background="#333333" />

            <!-- Caption Input Section -->
            <EditText
                android:id="@+id/caption_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add your caption here..."
                android:textSize="16sp"
                android:textColor="#000000"
                android:textColorHint="#444444"
                android:background="@drawable/edit_text_background"
                android:padding="12dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Overlay and ProgressBar -->
    <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminate="true" />

</FrameLayout>
