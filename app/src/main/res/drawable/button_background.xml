<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- Inner Gradient Button -->
    <item android:left="6dp" android:top="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="rectangle">

            <corners android:radius="130dp" />
            <gradient
                android:startColor="#141E30"
                android:endColor="#243B55"
                android:angle="45" />
            <stroke
                android:width="0dp"
                android:color="@color/background_dark" />
        </shape>
    </item>

    <!-- Soft Glow Overlay -->

</layer-list>
